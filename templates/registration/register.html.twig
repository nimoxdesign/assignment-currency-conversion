{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body_class %}page-registration{% endblock %}

{% block page_content %}
    <div class="page-title-wrapper container">
        <h1 class="page-title">
            {{ 'Register'|trans }}
        </h1>
    </div>

    <div class="customer-registration">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4">
                    {{ form_start(registrationForm) }}
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.username) }}
                        {{ form_widget(registrationForm.username, {attr: {class: 'form-control'}}) }}
                        <div class="form-group-errors">
                            {{ form_errors(registrationForm.username) }}
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email, {attr: {class: 'form-control'}}) }}
                        <div class="form-group-errors">
                            {{ form_errors(registrationForm.email, {attr: {class: 'invalid-feedback'}}) }}
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        {{ form_label(registrationForm.plainPassword, null, {label: 'Password'} ) }}
                        {{ form_widget(registrationForm.plainPassword, {attr: {class: 'form-control'}}) }}
                        <div class="form-group-errors">
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>
                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {attr: {class: 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms) }}
                        <div class="form-group-errors">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Register</button>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
