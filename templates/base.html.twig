<!DOCTYPE html>
<html>
    <head>
        {% block metadata %}
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        {% endblock %}
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {% block bootstrap_css %}
                <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            {% endblock %}
            {% block fontawesome_css %}
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            {% endblock %}
            {% block custom_css %}
                <link rel="stylesheet" href="/assets/dist/css/styles.css" />
                <link rel="stylesheet" href="/assets/dist/css/styles-responsive.css" />
            {% endblock %}
        {% endblock %}
    </head>
    <body class="{% block body_class %}{% endblock %}">
        {% block body %}
            <header class="page-header shadow-sm">
                {% block page_header %}
                    {% block page_header_top %}
                        {% include 'layout/html/header/header-top.html.twig' %}
                    {% endblock %}
                    {% block page_header_middle %}
                        {% include 'layout/html/header/header-middle.html.twig' %}
                    {% endblock %}
                    {% block page_header_bottom %}
                        {% include 'layout/html/header/header-bottom.html.twig' %}
                    {% endblock %}
                {% endblock %}
            </header>
            <main class="page-content">
                {% block page_content %}{% endblock %}
            </main>
            <footer class="page-footer">
                {% block page_footer %}
                    {% block page_footer_top %}
                        {% include 'layout/html/footer/footer-top.html.twig' %}
                    {% endblock %}
                    {% block page_footer_middle %}
                        {% include 'layout/html/footer/footer-middle.html.twig' %}
                    {% endblock %}
                    {% block page_footer_bottom %}
                        {% include 'layout/html/footer/footer-bottom.html.twig' %}
                    {% endblock %}
                {% endblock %}
            </footer>
        {% endblock %}

        {% block javascripts %}
            {% block bootstrap_js %}
                <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
            {% endblock %}
            {% block custom_js %}
                <script src="/assets/dist/js/bundle.js"></script>
            {% endblock %}
        {% endblock %}
    </body>
</html>
